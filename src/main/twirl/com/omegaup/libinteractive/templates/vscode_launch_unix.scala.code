@import _root_.java.nio.file.Path
@(message: String, runPath: Path, debugExecutable: Path)
{
    // @message
    "version": "0.2.0",
    "configurations": [
        {
            "name": "libinteractive runner",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "externalConsole": true,
            "stopAtEntry": false,
            "program": "${workspaceFolder}/@runPath",
            "args": [
                "--debug",
                "--pause"
            ],
            "environment": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "attach",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "sleep",
            "miDebuggerServerAddress": "localhost:8042",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "program": "${workspaceFolder}/@debugExecutable",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Debug",
            "configurations": ["libinteractive runner", "attach"]
        }
    ]
}
